<div class="col-xs-12 col-md-4">
  <% if !event.photo.nil? %>
    <%  image = event.photo %>
  <% else %>
    <%  image = "agroe.png" %>
  <% end %>

  <% if !user_signed_in? %>
    <% if event.agroe_adhesion_protected === true %>
      <% if event.agroclubrse_only === true %>
        <div class="card-container" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image %>);">
        <div class="lock-info">
          <span style=font-size:10px>Exclu AgroClubRSE</span>
          <i class="fas fa-lock"></i>
        </div>

      <% else %>
        <div class="card-container" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image %>);">
          <div class="lock-info">
            <i class="fas fa-lock"></i>
          </div>
      <% end %>
    <% else %>
      <div class="card-container clickable" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image %>);">
      <div class="event-liencard"><a href=<%= event_path(event) %> ></a></div>
    <% end %>
  <% else %>
    <% if current_user.adhesion_type === 'agroe' %>
      <% if event.agroclubrse_only === true %>
        <div class="card-container" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image %>);">
          <div class="lock-info">
            AgroClubRSE
            <i class="fas fa-lock"></i>
          </div>
        <% else %>
        <div class="card-container clickable" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image %>);">
        <div class="event-liencard"><a href=<%= event_path(event) %> ></a></div>
      <% end %>
    <% else %>
        <div class="card-container clickable" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image %>);">
        <div class="event-liencard"><a href=<%= event_path(event) %> ></a></div>
    <% end %>
  <% end %>
    <div class="card-title">
      <%= event.name %>
    </div>
    <div class="card-description">
        <%= event.description %>
    </div>
  </div>
</div>



