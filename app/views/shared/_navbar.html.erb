<div class="navbar-wagon navbar-fixed-top">
  <!-- Logo -->
  <div class="navbar-wagon-brand">
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
  <%= image_tag "agroe.png"%>
  <% end %>
  </div>


  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>
      <!-- Links when logged in -->
      <%= link_to "Évènements", events_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Adhérents", users_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <%= link_to "Ressources", ressources_path, class: "navbar-wagon-item navbar-wagon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
        <% if current_user.person_img.present? %>
          <% image = current_user.person_img %>
          <%= cl_image_tag image, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <% else %>
          <%= image_tag "profil.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
         <% end %>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to user_path(current_user) do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>

    <%= link_to "Évènements", root_path(anchor: 'events'), class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Ils nous font confiance", root_path(anchor: 'partenaires'), class: "navbar-wagon-item navbar-wagon-link" %>
    <%= link_to "Nous Contacter", root_path(anchor: 'contact-info-container'), class: "navbar-wagon-item navbar-wagon-link" %>
     <%= link_to new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" do %>
      <i class="fas fa-user-shield"> </i>
     <% end %>
      <!-- Login link (when logged out) -->

    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
  <% if user_signed_in? %>
    <div class="dropdown">
        <% if current_user.person_img.present? %>
          <% image = current_user.person_img %>
          <%= cl_image_tag image, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <% else %>
          <%= image_tag "profil.png", class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
         <% end %>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Évènements", events_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Adhérents", users_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Ressources", ressources_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li> <%= link_to "Profile", user_path(current_user), class: "navbar-wagon-item navbar-wagon-link" %> </li>
        <li><%= link_to "Déconnection", destroy_user_session_path, method: :delete, class: "navbar-wagon-item navbar-wagon-link" %></li>
      </ul>
    </div>
  <% else %>
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href=<%= root_path(anchor: 'events') %>>Évènements</a></li>
        <li><a href=<%= root_path(anchor: 'partenaires') %>>Entreprises</a></li>
        <li><a href=<%=root_path(anchor: 'contact-info-container')%>>Nous Contacter</a></li>
      </ul>
    </div>
    <% end %>
  </div>
</div>

