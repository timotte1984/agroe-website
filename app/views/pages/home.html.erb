<% if user_signed_in? %>
  <%= render '/shared/dashboard', user: current_user %>
<% else %>
    <div id="banner" style="background-image: linear-gradient(to bottom, rgba(270,270,270,1) 60%, rgba(270,270,270,1) 100%), url(<%= asset_path ''%>);">
      <div id="banner-content">
        <%= image_tag 'agroe.png' %>
        <h1>
          Des évènements et projets <span class="visionnary">originaux</span> </br>
          pour le secteur <span class="engage"> agroalimentaire</span></br>
          en <span class="experts">Hauts-de-France</span></br>
       </h1>
      </div>
    </div>

    <div id="events">
      <div class="events-content">
        <h3><strong>Nos Prochains Évènements </strong></h3>
          <% @events.where('date > ?', Date.today.to_s).order(:date).first(5).each do |e| %>
            <%= render 'shared/event_card2', event: e %>
          <% end %>
          <%= link_to "+ d'évènements", events_path(), class: 'btn btn-link' %>
          <%= render '/shared/form_email2' %>

      </div>
    </div>



