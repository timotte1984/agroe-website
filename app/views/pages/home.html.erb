<% if user_signed_in? %>
  <%= render '/shared/dashboard', user: current_user %>
<% else %>
    <div id="banner" style="background-image: linear-gradient(to bottom, rgba(270,270,270,1) 60%, rgba(270,270,270,1) 100%), url(<%= asset_path ''%>);">
      <div id="banner-content">
        <%= image_tag 'agroe.png' %>
        <h2> Des évènements <span class="visionnary">originaux.</span> </br>Un réseau d'entreprises agroalimentaires <span class="engage"> engagées.</span></h2>
    </div>
    <div class="events">
      <div class="events-content">
        <h3><strong>Nos Évènements </strong></h3>
        <div class="row">
          <% @events.where('date > ?', Date.today.to_s).order(:date).each do |e| %>
